{{>layouts/header}}
<form class="container" action="/member/update" method="post">
    <input type="hidden" name="id" value="{{id}}">
    <div class="mb-3">
        <label class="form-label">email</label>
        <input type="text" class="form-control" name="email" value="{{member.email}}">
    </div>

    <div class="mb-3">
        <label class="form-label">password</label>
        <textarea rows="3" class="form-control" name="pwd" >{{member.pwd}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">수정</button>
    <a href="/member/{{member.id}}">Back</a>
</form>

{{>layouts/footer}}